
@import "../../../utils/weui.wxss";
@import "../../../utils/colorui/main.wxss";
@import "../../../utils/colorui/icon.wxss";


.cu-bar{
  min-height: 30px;
}
.operation{
  position: relative;
  box-sizing: border-box;
  margin: 70rpx 0 10rpx 0;
  padding: 6rpx 30rpx;
  background: #fff;
  box-shadow: 0 0 4rpx 0 rgba(255,255,255, .3)
}
.edu-top{
  box-shadow: 1px 2px 3px #ddd;
  padding: 0 30rpx;
  background-color:  #7acfa6; 
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  align-items: center;
  margin-top:5rpx;
  border-radius:9px;
}
.ouc-cel .tr .th , .ouc-cel .tr .td{
  width: 25%
}
.edu-top text{
  display: flex;
  flex: 1;
  font-size: 32rpx;
  color: white;
  text-align: center;
}
