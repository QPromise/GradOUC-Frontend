.list-item.s1002 {
  background-color: #e78ab0;
}

.list-item.s1001 {
  background-color: #7acfa6;
}

.list-item-left {
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-right: 10rpx;
}

.list-item-title {
  font-size: 11pt;
  line-height: 175%;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 100%;
  overflow: hidden;
}

.list-item-time {
  font-size: 10pt;
  line-height: 125%;
  opacity: 0.6;
  width: 100%;
}

.list-item-icon {
  flex: 0 0 60rpx;
  height: 60rpx;
  width: 60rpx;
  border-left: 1px solid #fff;
  padding-left: 25rpx;
}
