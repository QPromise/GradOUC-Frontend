.news-box {
  background-color: white;
  border-radius: 30rpx;
  margin: 25rpx 10rpx;
  box-shadow: 1px 2px 3px #ddd;
  display: flex;
  flex: 1;
  flex-direction: column;
  height: 240rpx;
  font-size: 28rpx;
  color: white;
  align-items: center;
}

.news_title {
  width: 100%;
  /* text-align: center; 
