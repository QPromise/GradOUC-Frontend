          <swiper-item>
          <view class="swiper_item"><text class="cuIcon-notification text-blue" style="margin-right:10rpx;"></text>{{item.title}}</view>
          </swiper-item>
        </navigator>
        </block>
        </swiper>
      </view>
</view>
