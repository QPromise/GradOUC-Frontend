<cu-custom>
	<view slot="content" style="color:white;font-weight:bold;">研在OUC</view>
</cu-custom>

  <view class='page_hd'>
    <i-notice-bar wx:if="{{shownews}}" icon="systemprompt" loop closable speed='500' class='notice-bar' getindex='{{getindex}}'>
      {{text}}
    </i-notice-bar>

    <view class="swiper">
    <swiper class="square-dot" indicator-dots="{{swiimgs.length>1?true:false}}"  indicator-active-color="#fff" autoplay="true" interval="6000" duration="1000" circular="true">
        <block wx:for="{{swiimgs}}" wx:for-item="item" wx:key="item">
          <swiper-item>
            <image src="{{item.image}}" bindtap="navTo" data-id="{{item.url}}" class="pic" />
          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>
