page {
  width: 100%;
  height: 100%;
  color: #f6f6f6;
  position: relative;
}
.swiper_container {
  background-color: white;
  color:gray;
  height: 34rpx;
  width: 100%;
 }
  
 .swiper_item {
  font-size: 27rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
 }
.cu-list.grid>.cu-item text{
  color:black;
}
.cu-list.grid.no-border{
  padding:15rpx 10rpx;
}
