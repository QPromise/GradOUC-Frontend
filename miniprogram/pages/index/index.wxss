  position: relative;
  display: flex;
  flex-direction: column;
}
.guide-item-text{
  width: 100%;
  font-size: 30rpx;
  letter-spacing: 2px;
  text-align: center;
}
.guide-item-img-share{
  margin-top:180rpx;
  margin-left: 300rpx;
  width: 300rpx;
  height: 300rpx;
}
.bottom{
  width:40%;
