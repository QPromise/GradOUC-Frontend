/* miniprogram/pages/tools/tools.wxss */
@import "../../utils/colorui/main.wxss";
@import "../../utils/colorui/icon.wxss";
page {
  width: 100%;
  height: 100%;
  color: #f6f6f6;
}
.cu-list.grid>.cu-item text{
  color:black;
}
.cu-list.grid.no-border{
  padding:15rpx 10rpx;
}
.app-icon{
  margin-top: 10rpx;
  text-align: center;
}
.app-icon image{
  width: 56rpx!important;
  height: 56rpx!important;
}
.form-btn{
  background: transparent;
  border-radius: 0;
  padding: 0;
  margin: 0;
}
.form-btn::after{
  border: none;
}
.top{
  width: 100%;
  background: #f0eff4;
  padding: 20rpx 0;
}
.title{
  position: relative;
  padding: 4rpx 10px;
  justify-content: center;
  font-size: 14px;
  color: #706f75;
}
.cu-list.grid>.cu-item:after{
  border:none;
}
.cu-item{
  text-align: center
}
.cu-list.grid>.cu-item{
  padding: 10rpx 0 18rpx;
}
.cu-list.grid>.cu-item [class*=icon]{
  font-size: 40rpx;
}